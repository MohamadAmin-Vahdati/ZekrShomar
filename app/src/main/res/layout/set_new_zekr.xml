<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="15dp"
    android:paddingBottom="25dp"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:layoutDirection="ltr">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="right">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:inputType="text"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:id="@+id/ET_inputZekr"
            android:layout_weight="1"
            android:backgroundTint="#727272" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ذکر :"
            android:textSize="13sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="right">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:inputType="text"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:id="@+id/ET_inputTranslate"
            android:layout_weight="1"
            android:backgroundTint="#727272" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ترجمه : "
            android:textSize="13sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/TV_inputTranslate"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="2dp"
        android:layout_gravity="right">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:inputType="number"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/ET_inputFullCount"
            android:backgroundTint="#727272"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعداد دوره : "
            android:textSize="13sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/TV_inputFullCountAddZekr"/>

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بدون محدودیت"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:checked="false"
        android:id="@+id/CB_UltimateAddZekr"
        android:layout_marginTop="5dp"
        android:buttonTint="#727272"/>

   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="تایید"
       android:textColor="#000000"
       android:background="@drawable/bg_btn_ok"
       android:textSize="13sp"
       android:layout_gravity="center"
       android:layout_marginTop="15dp"
       android:id="@+id/btn_ConfirmAddZekr"
       android:textStyle="bold"/>

</LinearLayout>